{
  "name": "lofi",
  "version": "1.6.0",
  "description": "Mini Spotify player with visualizations.",
  "homepage": "http://lofi.rocks",
  "main": "./pack/main.bundle.js",
  "scripts": {
    "install": "yarn build",
    "config-xcode": "node-gyp configure -- -f xcode",
    "build": "node-gyp rebuild --target=4.0.1 --arch=x64 --dist-url=https://atom.io/download/electron && genversion --es6 --semi version.generated.ts",
    "start": "electron --trace-warnings ./pack/main.bundle.js",
    "dev": "yarn development",
    "development": "rimraf pack && webpack --watch --config ./webpack.dev.js --progress --color",
    "production": "rimraf pack && webpack --config ./webpack.prod.js --progress --color",
    "pack": "yarn build && yarn production && rimraf dist && electron-builder --dir",
    "dist": "yarn build && yarn production && rimraf dist && electron-builder",
    "clean": "rimraf build && rimraf pack && rimraf dist",
    "prettier": "npx prettier --config .pretierrc.json --write **/*{ts,tsx,js,css,scss,html,json}"
  },
  "repository": "https://github.com/dvx/lofi.git",
  "author": "David Titarenco <david.titarenco@gmail.com>",
  "license": "MIT",
  "private": false,
  "build": {
    "files": [
      "./pack/**/*",
      "./icon.*"
    ],
    "directories": {
      "output": "dist"
    },
    "appId": "lofi.rocks",
    "mac": {
      "identity": null,
      "category": "music.player"
    },
    "publish": [
      {
        "provider": "github",
        "releaseType": "draft"
      }
    ]
  },
  "devDependencies": {
    "@types/electron-util": "^0.11.1",
    "@types/express": "^4.17.11",
    "@types/lodash": "^4.14.168",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "copy-pkg-json-webpack-plugin": "^0.0.40",
    "copy-webpack-plugin": "^7.0.0",
    "css-loader": "^5.0.1",
    "electron": "^14.0.0",
    "electron-builder": "^22.11.7",
    "file-loader": "^6.2.0",
    "genversion": "^3.0.1",
    "html-webpack-plugin": "^4.5.1",
    "native-ext-loader": "^2.3.0",
    "node-addon-api": "^3.1.0",
    "node-gyp": "^7.1.2",
    "node-sass": "^6.0.1",
    "rimraf": "^3.0.2",
    "sass-loader": "^10.1.1",
    "style-loader": "^2.0.0",
    "ts-loader": "^8.0.14",
    "typescript": "^4.1.3",
    "webpack": "^5.52.0",
    "webpack-cli": "^4.8.0",
    "webpack-permissions-plugin": "^1.0.8"
  },
  "dependencies": {
    "@types/electron-json-storage": "^4.5.0",
    "@types/node": "^14.14.22",
    "bindings": "^1.3.1",
    "copyfiles": "^2.4.1",
    "electron-store": "^8.0.0",
    "electron-transparency-mouse-fix": "^1.0.0-rc.1",
    "electron-util": "^0.17.2",
    "frameless-titlebar": "^2.1.4",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-new-window": "^0.1.3"
  }
}
